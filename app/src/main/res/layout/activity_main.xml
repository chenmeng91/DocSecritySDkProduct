<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="docsecuritysdk.eetrust.com.docsecuritysdk.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <CheckBox
                android:id="@+id/is_net_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="是否有网络请求" />

            <Button
                android:id="@+id/config1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配置无网络请求"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/config2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配置有网络请求" />

            <Button
                android:id="@+id/btn_get_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份认证" />

            <Button
                android:id="@+id/config_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份验证"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btn_encrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加密" />



            <Button
                android:id="@+id/decrypt_erplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解密并打开" />

            <Button
                android:id="@+id/issecdoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否是密文" />


            <Button
                android:id="@+id/jnitest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jniTest"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/test_void"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/author_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授权"
                />

            <Button
                android:id="@+id/test_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
